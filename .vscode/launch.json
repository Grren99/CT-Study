{
  // https://code.visualstudio.com/docs/editor/variables-reference
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Python: Current File",
          "type": "python",
          "request": "launch",
          "program": "${file}",
          "console": "integratedTerminal",
          "args": ["<", "${relativeFileDirname}/${fileBasenameNoExtension}.txt"]
      }
  ]
}